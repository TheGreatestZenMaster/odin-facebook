<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Odin Facebook", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <% if user_signed_in? %>
          <li><%= link_to "Users", users_path %></li>
              <li><%= link_to "Profile", profile_user_path(current_user) %></li>
              <li><%= link_to "Settings", under_construction_path %></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Notifications <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <% if current_user.recieved_notifications.any? %>
                    <% current_user.recieved_notifications.each do|notification| %>
                      <li><%= link_to "#{notification.notifyable_type}", notification_path(notification) %></li>
                    <% end %>
                  <% else %>
                    <li> No Notifications</li>
                  <% end %>
                </ul>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", destroy_user_session_path, :method => :delete %>
              </li>
        <% else %>
          <li><%= link_to "Log in", new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>